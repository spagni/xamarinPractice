<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldPCL.StackPage" Padding="0, 20, 0, 0" BackgroundColor="#127ac7">
    <StackLayout VerticalOptions="Center">
        <Label Text="Welcome to Xamarin" 
               TextColor="White"
               FontSize = "30"
               FontAttributes = "Bold"
               HorizontalOptions = "Center">
        </Label>
        <Label Text="Cross-Platforms apps " 
               TextColor="White"
               FontSize = "30"
               HorizontalOptions = "Center">
        </Label>
        <Button Text="Login" BackgroundColor="#1dabf0" TextColor="White"></Button>
        <Button Text="Register" BackgroundColor="#1dabf0" TextColor="White"></Button>
    </StackLayout>
</ContentPage>